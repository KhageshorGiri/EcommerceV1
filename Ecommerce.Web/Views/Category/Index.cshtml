
@model IEnumerable<Ecommerce.Entities.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<hr />

@if (Model.Count() > 0)
{
    <div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}